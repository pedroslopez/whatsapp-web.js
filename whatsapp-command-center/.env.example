# WhatsApp Command Center - Environment Variables
# Copy this file to .env and update values

# ============================================================================
# Application
# ============================================================================
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/whatsapp_cc?schema=public"

# ============================================================================
# Redis (Cache & Queue)
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# Authentication
# ============================================================================
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRATION="15m"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRATION="7d"

# ============================================================================
# AI Providers (Optional - Can be configured via UI)
# ============================================================================

# OpenAI
OPENAI_API_KEY=""
OPENAI_ORGANIZATION=""

# Anthropic (Claude)
ANTHROPIC_API_KEY=""

# Google (Gemini)
GEMINI_API_KEY=""

# Custom AI Provider
CUSTOM_AI_ENDPOINT=""
CUSTOM_AI_API_KEY=""

# ============================================================================
# Object Storage (S3 or MinIO)
# ============================================================================
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="whatsapp-media"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
S3_USE_SSL=false

# ============================================================================
# Email (SMTP)
# ============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@whatsapp-cc.local"

# ============================================================================
# WhatsApp
# ============================================================================
WHATSAPP_SESSION_PATH="./.wwebjs_auth"
WHATSAPP_CACHE_PATH="./.wwebjs_cache"

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL="debug"
SENTRY_DSN=""

# ============================================================================
# Webhooks
# ============================================================================
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# ============================================================================
# Features Flags
# ============================================================================
ENABLE_AI_AUTO_REPLY=true
ENABLE_ANALYTICS=true
ENABLE_BROADCASTS=true
ENABLE_WEBHOOKS=true

# ============================================================================
# Limits (Free Tier)
# ============================================================================
MAX_USERS_PER_ORG=5
MAX_SESSIONS_PER_ORG=1
MAX_CONTACTS_PER_ORG=1000
MAX_MESSAGES_PER_DAY=1000
MAX_AI_REQUESTS_PER_DAY=100
